

<h1>Add New Vehicle</h1>

<% if (typeof message !== 'undefined' && message) { %>
  <div class="flash-message success"><%= message %></div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <div class="errors">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>


<form action="/inv/add-inventory" method="post">
  <label for="make">Make</label>
  <input type="text" id="make" name="make" value="<%= inventory?.make || '' %>" required>

  <label for="model">Model</label>
  <input type="text" id="model" name="model" value="<%= inventory?.model || '' %>" required>

  <label for="year">Year</label>
  <input type="number" id="year" name="year" value="<%= inventory?.year || '' %>" required>

  <label for="description">Description</label>
  <textarea id="description" name="description" required><%= inventory?.description || '' %></textarea>

  <label for="image">Image URL</label>
  <input type="text" id="image" name="image" value="<%= inventory?.image || '' %>" required>

  <label for="price">Price</label>
  <input type="number" id="price" name="price" step="0.01" value="<%= inventory?.price || '' %>" required>

  <label for="miles">Miles</label>
  <input type="number" id="miles" name="miles" value="<%= inventory?.miles || '' %>" required>

  <label for="color">Color</label>
  <input type="text" id="color" name="color" value="<%= inventory?.color || '' %>" required>

  <label for="classification_id">Classification</label>
  <select id="classification_id" name="classification_id" required>
    <option value="">-- Select a Classification --</option>
    <% classificationList.forEach(item => { %>
      <option value="<%= item.classification_id %>" <%= inventory?.classification_id == item.classification_id ? "selected" : "" %>>
        <%= item.classification_name %>
      </option>
    <% }) %>
  </select>

  <button type="submit">Add Vehicle</button>
</form>


