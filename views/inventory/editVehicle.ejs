<h1>Edit Vehicle</h1>

<% if (inventory) { %>
  <form action="/inv/inventory/<%= inventory.inventory_id %>" method="POST">
    <label>Make:</label>
    <input type="text" name="make" value="<%= inventory.make %>" required />

    <label>Model:</label>
    <input type="text" name="model" value="<%= inventory.model %>" required />

    <label>Year:</label>
    <input type="number" name="year" value="<%= inventory.year %>" required />

    <label>Description:</label>
    <textarea name="description"><%= inventory.description %></textarea>

    <label>Image URL:</label>
    <input type="text" name="image" value="<%= inventory.image %>" />

    <label>Price:</label>
    <input type="number" step="0.01" name="price" value="<%= inventory.price %>" />

    <label>Miles:</label>
    <input type="number" name="miles" value="<%= inventory.miles %>" />

    <label>Color:</label>
    <input type="text" name="color" value="<%= inventory.color %>" />

    <label>Classification:</label>
    <select name="classification_id" required>
      <option value="">-- Select a Classification --</option>
      <% classifications.forEach(classif => { %>
        <option value="<%= classif.classification_id %>" <%= classif.classification_id === inventory.classification_id ? 'selected' : '' %>>
          <%= classif.classification_name %>
        </option>
      <% }) %>
    </select>

    <button type="submit">Update Vehicle</button>
  </form>
<% } else { %>
  <p>Vehicle not found.</p>
<% } %>
